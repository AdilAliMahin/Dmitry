{
    "manifest_version": 2,
    "name": "Copy Emails by Lahore Software Factory",
    "description": "Copy Emails to clipboard",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/", 
        "https://*/",
	"clipboardWrite"
    ]
}
